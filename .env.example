# retainr MCP Server Configuration

# Server settings
RETAINR_HOST=127.0.0.1
RETAINR_PORT=8000

# Memory storage path (absolute or relative path)
# This directory will be created if it doesn't exist
# Users can browse and edit markdown files in this directory
RETAINR_MEMORY_DIR=./memory

# Example: Use a specific folder for memories
# RETAINR_MEMORY_DIR=/Users/username/Documents/retainr-memories

# ChromaDB configuration (bundled with Docker Compose)
RETAINR_CHROMA_HOST=localhost
RETAINR_CHROMA_PORT=8001
RETAINR_CHROMA_COLLECTION=retainr_memories

# Embedding model (sentence-transformers model name)
RETAINR_EMBEDDING_MODEL=all-MiniLM-L6-v2

# API settings
RETAINR_API_PREFIX=""
RETAINR_CORS_ORIGINS=["*"]

# Debug mode
RETAINR_DEBUG=false
